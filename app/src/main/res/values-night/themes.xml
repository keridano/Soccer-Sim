<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoccerSim" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>

    <style name="buttonView" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/CustomButtonThemeOverlay</item>
    </style>

    <style name="CustomButtonThemeOverlay">
        <item name="colorPrimary">@color/secondaryColor</item>
    </style>
</resources>